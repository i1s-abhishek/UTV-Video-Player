<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_sdcard"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="68.0dip"
            android:background="?toolbarSettingsBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:text="@string/title_warning"
                android:textColor="@color/title_color"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="16.0dip"
                android:tint="@color/sub_title_color"
                custom:srcCompat="@drawable/ic_action_delete" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_warn_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.0dip"
            android:layout_marginTop="18.0dip"
            android:layout_marginEnd="16.0dip"
            android:text="@string/warning_content"
            android:textColor="@color/sub_title_color"
            android:textSize="14.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="58.0dip"
            android:layout_marginTop="18.0dip">

            <RelativeLayout
                android:id="@+id/tv_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:background="?android:selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/accent_color"
                    android:padding="12.0dip"
                    android:text="@string/confirm"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16.0dip"
                android:layout_marginEnd="16.0dip"
                android:layout_toStartOf="@id/tv_confirm"
                android:background="?android:selectableItemBackground"
                android:padding="12.0dip"
                android:text="@string/action_cancel"
                android:textAllCaps="true"
                android:textColor="@color/primary_color_dark"
                android:textSize="14.0sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>