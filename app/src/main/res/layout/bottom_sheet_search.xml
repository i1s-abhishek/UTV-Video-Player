<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="?settingBgColor"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/sheet_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="16.0dip"
        android:singleLine="true"
        android:textColor="?homeSubTextColor"
        android:textSize="14.0sp" />

    <View style="@style/dividerStyle" />

    <com.abhishek.xplayer.utils.widget.VectorDrawableTextView
        android:id="@+id/locate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?itemBgSelector"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="@string/locate_video"
        android:textColor="?homeTextColor"
        android:textSize="14.0sp"
        app:drawableLeftCompat="@drawable/ic_jump" />

    <com.abhishek.xplayer.utils.widget.VectorDrawableTextView
        android:id="@+id/lock"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?itemBgSelector"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="@string/lock_tips"
        android:textColor="?homeTextColor"
        android:textSize="14.0sp"
        app:drawableLeftCompat="@drawable/ic_menu_lock" />

    <com.abhishek.xplayer.utils.widget.VectorDrawableTextView
        android:id="@+id/delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?itemBgSelector"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="@string/delete"
        android:textColor="?homeTextColor"
        android:textSize="14.0sp"
        app:drawableLeftCompat="@drawable/ic_menu_delete" />

    <com.abhishek.xplayer.utils.widget.VectorDrawableTextView
        android:id="@+id/share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?itemBgSelector"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="@string/share"
        android:textColor="?homeTextColor"
        android:textSize="14.0sp"
        app:drawableLeftCompat="@drawable/ic_menu_share" />

    <com.abhishek.xplayer.utils.widget.VectorDrawableTextView
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?itemBgSelector"
        android:drawablePadding="20.0dip"
        android:gravity="center_vertical"
        android:paddingLeft="16.0dip"
        android:paddingTop="12.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="12.0dip"
        android:text="@string/properties"
        android:textColor="?homeTextColor"
        android:textSize="14.0sp"
        app:drawableLeftCompat="@drawable/ic_menu_info" />
</LinearLayout>