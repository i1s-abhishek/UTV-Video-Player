<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/play_list_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:background="#f3000000"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="52.0dip">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/down_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_btn_light"
                android:padding="10.0dip"
                app:srcCompat="@drawable/ic_close" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/repeat_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_common_btn_light"
                android:padding="10.0dip"
                android:paddingRight="16.0dip"
                app:srcCompat="@drawable/ic_repeat_order" />

            <TextView
                android:id="@+id/repeat_mode_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/repeat_mode"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/repeat_order"
                android:textColor="#ffe6e6e6"
                android:textSize="12.0sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/repeat_mode_text"
                android:layout_toRightOf="@id/down_btn">

                <TextView
                    android:id="@+id/play_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:paddingRight="30.0dip"
                    android:singleLine="true"
                    android:textColor="#ffe6e6e6"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/play_list_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/play_list_name"
                    android:layout_centerVertical="true"
                    android:gravity="left"
                    android:maxLines="1"
                    android:minWidth="24.0dip"
                    android:singleLine="true"
                    android:textColor="#ff808080"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <View
                android:id="@+id/new_repeat_dot"
                android:layout_width="8.0dip"
                android:layout_height="8.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="11.0dip"
                android:layout_marginRight="11.0dip"
                android:background="@drawable/red_dot"
                android:visibility="gone" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/play_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</merge>