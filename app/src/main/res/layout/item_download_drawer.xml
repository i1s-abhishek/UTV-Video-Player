<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:clickable="false"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_toStartOf="@id/checkbox"
        android:layout_toLeftOf="@id/checkbox"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@color/title_color"
            android:textSize="14.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/flag"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_centerVertical="true"
                android:tint="@color/sub_title_color" />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="4.0dip"
                android:layout_marginLeft="4.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginBottom="8.0dip"
                android:layout_toEndOf="@id/flag"
                android:layout_toRightOf="@id/flag"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:textColor="@color/sub_title_color"
                android:textSize="12.0sp" />

            <ImageView
                android:id="@id/downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/size"
                android:layout_toRightOf="@id/size"
                app:srcCompat="@drawable/ic_downloaded" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/re_download"
                    style="?buttonBarPositiveButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/re_download"
                    android:textAllCaps="true"
                    android:textColor="@color/error_red"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/view"
                    style="?buttonBarPositiveButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8.0dip"
                    android:layout_marginRight="8.0dip"
                    android:gravity="center"
                    android:text="@string/view"
                    android:textAllCaps="true"
                    android:textColor="@color/accent_color"
                    android:textSize="14.0sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>