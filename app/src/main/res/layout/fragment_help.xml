<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/previous_layout"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginLeft="16.0dip"
            android:background="@drawable/bg_back_cir">

            <ImageView
                android:layout_width="32.0dip"
                android:layout_height="32.0dip"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_keyboard_arrow_left_white_24dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:background="@drawable/got_it_backg"
            android:text="@string/got_it"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        style="?checkboxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8.0dip"
        android:layout_marginEnd="8.0dip"
        android:layout_marginRight="8.0dip"
        android:padding="8.0dip"
        android:tint="#ffffffff"
        app:srcCompat="@drawable/ic_action_delete" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_layout"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginRight="32.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:background="@drawable/bg_accent_cir"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_marginEnd="8.0dip"
                android:layout_marginRight="8.0dip"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="#ffffffff"
                android:textSize="16.0sp" />
        </LinearLayout>

        <video.downloader.videodownloader.five.view.ScalingImageView
            android:id="@+id/help_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="32.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dot_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.0dip"
                android:layout_marginLeft="16.0dip" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.0dip"
                android:layout_marginLeft="16.0dip" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.0dip"
                android:layout_marginLeft="16.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/youtube_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_layout"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="66.0dip"
            android:layout_height="66.0dip"
            android:src="@mipmap/youtube_tip" />

        <TextView
            android:layout_width="274.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="32.0dip"
            android:gravity="center"
            android:text="@string/cannot_download_tip"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />

        <TextView
            android:layout_width="274.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="8.0dip"
            android:gravity="center"
            android:text="@string/please_download_from_other_website"
            android:textColor="#ffffffff"
            android:textSize="16.0sp" />
    </LinearLayout>
</RelativeLayout>