<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff2a2a2b"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pin_enter"
                android:textColor="#dfffffff"
                android:textSize="23.0sp" />

            <LinearLayout
                android:id="@+id/pin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50.0dip">

                <ImageView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:scaleType="center"
                    android:src="@drawable/bg_pin" />

                <ImageView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginLeft="23.0dip"
                    android:scaleType="center"
                    android:src="@drawable/bg_pin" />

                <ImageView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginLeft="23.0dip"
                    android:scaleType="center"
                    android:src="@drawable/bg_pin" />

                <ImageView
                    android:layout_width="15.0dip"
                    android:layout_height="15.0dip"
                    android:layout_marginLeft="23.0dip"
                    android:scaleType="center"
                    android:src="@drawable/bg_pin" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pin_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20.0dip"
            android:background="@drawable/btn_black_selector"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="5.0dip"
            android:text="@string/pin_forget"
            android:textAllCaps="true"
            android:textColor="@color/green_text_color"
            android:textSize="16.0sp"
            android:visibility="gone" />
    </FrameLayout>

    <TableLayout
        android:id="@+id/layout_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/password_size"
        android:background="#ff222222">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/key_1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="1"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="2"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="3"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/key_4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="4"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_5"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="5"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_6"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="6"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/key_7"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="7"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_8"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="8"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <TextView
                android:id="@+id/key_9"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="9"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">

            <ImageView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/key_0"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:text="0"
                android:textColor="#cdffffff"
                android:textSize="33.0sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/key_back"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/bg_common_btn_light"
                android:gravity="center"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_backspace" />
        </TableRow>
    </TableLayout>
</LinearLayout>