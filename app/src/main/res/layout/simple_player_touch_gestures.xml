<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/brightness_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:background="@drawable/bg_sound_progress"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8.0dip"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/brightness_progress"
            style="@style/SoundProgressBarVertical"
            android:layout_width="6.0dip"
            android:layout_height="106.0dip"
            android:layout_marginTop="4.0dip"
            android:max="100"
            android:progress="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_video_brightness_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            app:srcCompat="@drawable/ic_brightness" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_video_volume_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="15.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/app_video_volume_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volume"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/app_video_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="35.0dip"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/app_video_volume_boost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="32.0dip"
            android:textColor="#ffffae00"
            android:textSize="17.0sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_video_brightness_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_center"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15.0dip"
        android:paddingTop="10.0dip"
        android:paddingRight="15.0dip"
        android:paddingBottom="10.0dip"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/brightness"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />

        <TextView
            android:id="@+id/app_video_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:minWidth="50.0dip"
            android:textColor="@android:color/white"
            android:textSize="17.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/app_video_fastForward_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40.0dip"
        android:paddingTop="11.0dip"
        android:paddingRight="40.0dip"
        android:paddingBottom="11.0dip"
        android:visibility="gone">

        <TextView
            android:id="@+id/app_video_fastForward_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="29.0sp" />

        <TextView
            android:id="@+id/app_video_fastForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3.0dip"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sound_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/bg_sound_progress"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8.0dip"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/sound_progress"
            style="@style/SoundProgressBarVertical"
            android:layout_width="6.0dip"
            android:layout_height="106.0dip"
            android:layout_marginTop="4.0dip"
            android:progress="0" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_video_volume_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            app:srcCompat="@drawable/ic_sound" />
    </LinearLayout>
</merge>