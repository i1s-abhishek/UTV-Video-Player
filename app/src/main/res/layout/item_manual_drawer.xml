<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/re_download"
            style="?checkboxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:clickable="false"
            android:focusable="false"
            android:tint="#ffff0000"
            app:srcCompat="@drawable/ic_refresh_black_24dp" />

        <ImageView
            android:id="@+id/view"
            style="?checkboxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:clickable="false"
            android:focusable="false"
            android:tint="@color/accent_color"
            app:srcCompat="@drawable/ic_remove_red_eye_black_24dp" />

        <ImageView
            android:id="@+id/download"
            style="?checkboxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:clickable="false"
            android:focusable="false"
            android:tint="@color/accent_color"
            app:srcCompat="@drawable/ic_file_download_black_24dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/downloaded"
        android:layout_width="18.0dip"
        android:layout_height="18.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        app:srcCompat="@drawable/ic_downloaded" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8.0dip"
        android:layout_marginBottom="8.0dip"
        android:layout_toStartOf="@id/action_layout"
        android:layout_toLeftOf="@id/action_layout"
        android:layout_toEndOf="@id/downloaded"
        android:layout_toRightOf="@id/downloaded"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@color/title_color"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="@color/sub_title_color"
            android:textSize="12.0sp" />
    </LinearLayout>
</RelativeLayout>