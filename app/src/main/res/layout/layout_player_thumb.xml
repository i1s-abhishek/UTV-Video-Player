<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thumb_layout"
    android:layout_width="@dimen/play_seek_thumb_layout_width"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/play_seek_thumb_margin_large"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8.0dip">

        <com.abhishek.xplayer.utils.widget.BitmapImageView
            android:id="@+id/thumb"
            android:layout_width="152.0dip"
            android:layout_height="86.0dip"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/text_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.0dip"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#ffffffff"
            android:textSize="14.0sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_triangle" />
</LinearLayout>