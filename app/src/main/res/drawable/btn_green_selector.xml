<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/ripple_color_dark"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#ff000000" />
            <corners android:radius="2.0dip" />
        </shape>
    </item>
    <item>
        <selector
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="#ffc1c1c1" />
                    <corners android:radius="2.0dip" />
                </shape>
            </item>
            <item android:state_pressed="false" android:drawable="@drawable/btn_green_normal" />
            <item android:state_pressed="true" android:drawable="@drawable/btn_green_press" />
        </selector>
    </item>
</ripple>